{
  "name": "@evently/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npx tsup",
    "build:local": "npx tsup",
    "build:nest": "nest build",
    "format": "prettier --write \"./**/*.ts\" \"./**/*.ts\"",
    "lint": "eslint \"{core,shared,api,test}/**/*.ts\" --fix",
    "migrate": "npx tsx databases/drizzle/scripts/migrate.ts",
    "migrate:drop": "drizzle-kit drop",
    "migrate:drop:local": "DATABASE_URL='postgres://database:database@localhost:5432/database' drizzle-kit drop",
    "migrate:gen": "drizzle-kit generate",
    "pg:drop": "npx tsx databases/dump/sql/pg-drop.ts",
    "pg:dump": "npx tsx databases/dump/sql/pg-dump.ts",
    "pg:reset": "yarn pg:drop ; yarn pg:migrate && yarn pg:seed",
    "pg:seed": "npx tsx databases/dump/sql/pg-seed.ts --test",
    "pg:migrate": "DATABASE_URL='postgres://database:database@localhost:5432/database' yarn migrate",
    "start:prod": "node dist/main",
    "start": "yarn start:dev",
    "start:dev": "cross-env NODE_ENV=development DEBUG='evently:*,-evently:query' npx ergol src/main.ts --config ergol.dev.json",
    "start:test": "cross-env NODE_ENV=test DEBUG='evently:*,-evently:query' npx ergol src/main.ts --config ergol.dev.json",
    "server:start": "bash scripts/server/start.sh",
    "server:start:test": "NODE_ENV=test bash scripts/server/start.sh",
    "server:stop": "bash scripts/server/stop.sh",
    "server:restart": "bash scripts/server/restart.sh",
    "server:restart:test": "NODE_ENV=test bash scripts/server/restart.sh",
    "server:log": "bash scripts/server/log.sh",
    "test": "DEBUG='evently:*,-evently:query' NODE_ENV=test jest --runInBand ",
    "test:azure-config": "npx tsx scripts/test-azure-config.ts",
    "test:azure-permissions": "npx tsx scripts/test-azure-permissions.ts",
    "test:azure-token": "npx tsx scripts/test-azure-token.ts",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand '",
    "type:check": "tsc --noEmit",
    "prettier": "prettier "
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@evently/api-client": "workspace:*",
    "@langchain/langgraph": "^0.4.2",
    "@nestjs/common": "11.1.4",
    "@nestjs/core": "11.1.4",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/platform-express": "11.1.4",
    "@nestjs/swagger": "11.2.0",
    "ai": "^4.3.16",
    "bcrypt": "^6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "cookie-parser": "1.4.7",
    "cookie-signature": "1.2.2",
    "debug": "4.4.1",
    "dotenv-flow": "4.1.0",
    "drizzle-orm": "0.44.3",
    "lru-cache": "11.1.0",
    "pg": "8.16.3",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0",
    "re2": "1.22.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.7",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "^11.1.4",
    "@swc/core": "^1.12.14",
    "@swc/jest": "0.2.39",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie": "^0",
    "@types/cookie-parser": "1.4.9",
    "@types/cookie-signature": "^1",
    "@types/debug": "4.1.12",
    "@types/express": "5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@types/passport-azure-ad": "^4",
    "@types/pg": "8.15.4",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "@typescript-eslint/parser": "8.37.0",
    "cross-env": "7.0.3",
    "drizzle-kit": "0.31.4",
    "ergol": "1.0.2",
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-prettier": "5.5.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "source-map-support": "0.5.21",
    "supertest": "7.1.3",
    "ts-jest": "^29.4.0",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsup": "8.5.0",
    "type-fest": "4.41.0",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
